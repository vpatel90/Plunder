<div class='open-sea'>
<% if @game.has_user?(current_user) && @game.state != "NOT_STARTED"%>

  <%= react_component('GameShow') %>

  <div class='player-dash'>
    <%= react_component('UserDash', player: @current_player) %>

  </div>
<% else %>
<h1> Sorry, I dont think you are in the right place </h1>
<% end %>
</div>
