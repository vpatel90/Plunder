    background: -webkit-linear-gradient(top, rgba(255,252,252,1) 0%, rgba(168,210,230,1) 23%,
     rgba(39,169,230,1) 30%, rgba(94,190,235,1) 79%, rgba(39,169,230,1) 100%);

    background: -o-linear-gradient(top, rgba(255,252,252,1) 0%, rgba(168,210,230,1) 23%,
