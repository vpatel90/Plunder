
<div class="container">
  <h3 class="form-header display-inlineblock"> Register </h3>
  <span class="right close-modal"> <i class="material-icons">close</i> </span>

  <%= form_tag '/users', method: :POST do %>

    <div class="row input-field">
      <%= text_field_tag "user[name]", nil, class: "user-form", autofocus: true %>
      <%= label_tag :name%>
    </div>


    <div class="row input-field">
      <%= password_field_tag "user[password]", nil, class: "user-form" %>
      <%= label_tag :password %>
    </div>


    <div class="row input-field">
      <%= password_field_tag "user[password_confirmation]", nil, class: "user-form" %>
      <%= label_tag :password_confirmation %>
    </div>

    <div class="row">
      <%= submit_tag "Register", class: "full-width btn primary-color" %>
    </div>
  <% end %>
</div>
